<%- include ("./partials/header.ejs")%>
<div class="container">
<div class="row">
	<div class="col-lg-12">
<form action="/posts/<%=posts._id%>?_method=PUT" method="POST">
	<div class="field">
	<input class="form-control" type="text" name="post[title]" value="<%=posts.title%>">
</div>
	<div class="field">
	<input class="form-control" type="text" name="post[img]" value="<%=posts.img%>">
</div>
	<div class="field">
	<textarea class="form-control" name="post[content]" placeholder="edit"><%=posts.content%></textarea>
</div>
<div class="form-group">
	<input type="submit">
</div>
</form>
</div>
</div>
</div>
<%- include ("./partials/footer.ejs")%>